{
    "name": "imanghafoori/composer-json",
    "description": "A utility class to read from composer.json file.",
    "keywords": [
        "composer.json"
    ],
    "homepage": "https://github.com/imanghafoori1/composer-json",
    "license": "MIT",
    "authors": [
        {
            "name": ":Iman Ghafoori",
            "email": "imanghafoori1@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "7.*|8.*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0"
    },
    "autoload": {
        "psr-4": {
            "ImanGhafoori\\ComposerJson\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ImanGhafoori\\ComposerJson\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
